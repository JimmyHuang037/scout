{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge against localhost",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "trace": true,
            "preLaunchTask": "serve",
            "timeout": 30000,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "ng serve",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/node_modules/@angular/cli/bin/ng",
            "args": ["serve", "--proxy-config", "proxy.conf.json"],
            "stopOnEntry": false,
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "timeout": 30000
        }
    ],
    "compounds": [
        {
            "name": "Debug Angular App",
            "configurations": ["ng serve", "Launch Edge against localhost"],
            "stopAll": true,
            "preLaunchTask": "serve"
        }
    ]
}